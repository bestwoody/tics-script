#!/bin/bash

here=`cd $(dirname ${BASH_SOURCE[0]}) && pwd`
source "${here}/_env.sh"
auto_error_handle

if [ -z "${1+x}" ]; then
	echo "usage: <func> clean" >&2
	exit 1
fi
local clean="${1}"

if [ "${clean}" == 'true' ]; then
	local cmd="burn doit"
else
	local cmd="fstop"
fi

"${integrated}/ops/ti.sh" -k "ports=+7#dir=nodes/7" "${integrated}/tests/_base/local_templ.ti" $cmd

