#!/bin/bash

function cmd_enable_sync_table()
{
	local ti_file="${1}"
	local ti_args="${2}"
	local cmd_mod_names="${3}"
	local cmd_hosts="${4}"
	local cmd_indexes="${5}"
	local mods="${6}"
	shift 6

	if [ -z "${2+x}" ] || [ -z "${1}" ] || [ -z "${2}" ]; then
		echo '[cmd sync] <cmd> database table [enabled=1|0]' >&2
		return
	fi

	local db="${1}"
	local table="${2}"

	local enabled='1'
	if [ ! -z "${3+x}" ] && [ ! -z "${3}" ]; then
		local enabled="${3}"
		if [ "${enabled}" != '0' ] && [ "${enabled}" != '1' ]; then
			echo "[cmd sync] value of enabled should be 1 or 0" >&2
			return 1
		fi
	fi

	local mod=`from_mods_random_mod "${mods}" 'tidb' 'false'`
	local dir=`from_mod_get_dir "${mod}"`
	local host=`from_mod_get_host "${mod}"`

	local port=`ssh_get_value_from_proc_info "${host}" "${dir}" 'tidb_port'`
	if [ -z "${port}" ]; then
		echo "[cmd sync] get port from ${host}:${dir}/proc.info failed" >&2
		return 1
	fi

	local query="alter table ${db}.${table} set tiflash replica ${enabled}"
	mysql -h "${host}" -P "${port}" -u root --database="${db}" --comments -e "${query}"

	if [ "${enabled}" == '0' ]; then
		echo "removed ${db}.${table} from tiflash, and stop syncing it from tikv to tiflash"
	else
		echo "keep syncing ${db}.${table} from tikv to tiflash"
	fi
}

set -euo pipefail
cmd_enable_sync_table "${@}"
