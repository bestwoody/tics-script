#!/bin/bash

function cmd_ti_verify_balance()
{
	local ti_file="${1}"
	local ti_args="${2}"
	local cmd_mod_names="${3}"
	local cmd_hosts="${4}"
	local cmd_indexes="${5}"
	local mods="${6}"
	shift 6

	if [ -z "${2+x}" ]; then
		echo "[cmd verify/balance] usage: <cmd> database table [selraw=false]"
		exit 1
	fi

	local table="${1}.${2}"

	local selraw='false'
	if [ ! -z "${3+x}" ]; then
		local selraw="${3}"
	fi

	local select='select'
	if [ "${selraw}" == 'true' ] || [ "${selraw}" == 'raw' ] || [ "${selraw}" == 'selraw' ]; then
		local select='selraw'
	fi

	"${integrated}/ops/ti.sh" -h "${cmd_hosts}" -k "${ti_args}" -m "${cmd_mod_names}" -i "${cmd_indexes}" \
		"${ti_file}" 'ch' "${select} count(1) from ${table}" 'default' 'TabSeparated' 'false' | sort -rnk 1
}

source "`cd $(dirname ${BASH_SOURCE[0]}) && pwd`/_env.sh"
auto_error_handle
cmd_ti_verify_balance "${@}"
