#!/bin/bash

function cmd_ti_verify_balance()
{
	local ti_file="${1}"
	local ti_args="${2}"
	local cmd_mod_names="${3}"
	local cmd_hosts="${4}"
	local cmd_indexes="${5}"
	local mods="${6}"
	shift 6

	local table="${1}"
	local selraw="${2}"

	source "`cd $(dirname ${BASH_SOURCE[0]}) && pwd`/_env.sh"
	auto_error_handle

	if [ -z "${table}" ]; then
		echo "[cmd verify/balance] usage: <cmd> [database.]table"
		exit 1
	fi
	if [ -z "${selraw}" ]; then
		local selraw='false'
	fi

	local select='select'
	if [ "${selraw}" == 'true' ] || [ "${selraw}" == 'raw' ] || [ "${selraw}" == 'selraw' ]; then
		local select='selraw'
	fi

	"${integrated}/ops/ti.sh" -h "${cmd_hosts}" -k "${ti_args}" -m "${cmd_mod_names}" -i "${cmd_indexes}" \
		"${ti_file}" 'ch' "${select} count(1) from ${table}" 'default' 'TabSeparated' | sort -rnk 1
}

cmd_ti_verify_balance "${@}"
