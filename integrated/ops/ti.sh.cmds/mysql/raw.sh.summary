#!/bin/bash

function cmd_ti_mysql_raw()
{
	local ti_file="${1}"
	local ti_args="${2}"
	local cmd_mod_names="${3}"
	local cmd_hosts="${4}"
	local cmd_indexes="${5}"
	local mods="${6}"
	shift 6

	local mod=`echo "${mods}"| grep "tidb.toml"`
	if [ -z "${mod}" ]; then
		echo "[cmd mysql/raw] no tidb selected" >&2
		return 1
	fi

	local tidb_cnt=`echo "${mod}" | wc -l | awk '{print $1}'`
	if [ "${tidb_cnt}" != '1' ]; then
		echo "[cmd mysql/raw] more than one selected tidb" >&2
		return 1
	fi

	local index=`from_mod_get_index "${mod}"`
	local name=`from_mod_get_name "${mod}"`
	local dir=`from_mod_get_dir "${mod}"`
	local conf=`from_mod_get_conf "${mod}"`
	local host=`from_mod_get_host "${mod}"`

	local port=`ssh_get_value_from_proc_info "${host}" "${dir}" 'tidb_port'`
	if [ -z "${host}" ]; then
		local host=`must_print_ip`
	fi

	if [ -z "${port}" ]; then
		echo "[cmd mysql/raw] getting tidb port failed from ${host}:${dir}" >&2
		return 1
	fi

	mysql -h "${host}" -P "${port}" -u root "${@}"
}

cmd_ti_mysql_raw "${@}"
