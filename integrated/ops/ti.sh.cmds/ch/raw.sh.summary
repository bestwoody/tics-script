#!/bin/bash

function cmd_ti_mysql_raw()
{
	local ti_file="${1}"
	local ti_args="${2}"
	local cmd_mod_names="${3}"
	local cmd_hosts="${4}"
	local cmd_indexes="${5}"
	local mods="${6}"
	shift 6

	local mod=`from_mods_random_mod "${mods}" 'tiflash' 'false'`
	if [ -z "${mod}" ]; then
		echo "[cmd ch/raw] no tiflash selected" >&2
		return 1
	fi

	local dir=`from_mod_get_dir "${mod}"`
	local host=`from_mod_get_host "${mod}"`

	local port=`ssh_get_value_from_proc_info "${host}" "${dir}" 'tcp_port'`
	if [ -z "${host}" ]; then
		local host=`must_print_ip`
	fi

	if [ -z "${port}" ]; then
		echo "[cmd ch/raw] getting tcp port failed from ${host}:${dir}" >&2
		return 1
	fi

	if [ `uname` != "Darwin" ]; then
		# TODO: remove hard code file name from this func
		local target_lib_dir="tiflash_lib"
		if [ ! -d "${dir}/${target_lib_dir}" ]; then
			echo "[cmd ch] cannot find library dir ${dir}/${target_lib_dir}"
			return 1
		fi
		# TODO: check whether the following path exists before use it
		local lib_path="/usr/local/lib64:/usr/local/lib:/usr/lib64:/usr/lib:${dir}/${target_lib_dir}"
		if [ -z "${LD_LIBRARY_PATH+x}" ]; then
			export LD_LIBRARY_PATH="$lib_path"
		else
			export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:$lib_path"
		fi
	fi
	local bin_dir="/tmp/ti/master/bins"
	"${bin_dir}/tiflash" client --host="${host}" --port="${port}"
}

cmd_ti_mysql_raw "${@}"
