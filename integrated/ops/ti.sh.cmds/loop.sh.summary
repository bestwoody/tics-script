#!/bin/bash

function cmd_ti_loop()
{
	local ti_file="${1}"
	local ti_args="${2}"
	local cmd_mod_names="${3}"
	local cmd_hosts="${4}"
	local cmd_indexes="${5}"
	local mods="${6}"
	shift 6

	local cmd="${1}"

	local here=`cd $(dirname ${BASH_SOURCE[0]}) && pwd`
	source "${here}/_env.sh"
	auto_error_handle

	if [ -z "${cmd}" ]; then
		echo "[cmd loop] usage: ti.sh [flags] ti_file_path loop cmd [args]"
		exit 1
	fi

	for (( r = 0; 0 == 0; r++ )); do
		if [ -z "`echo ${cmd} | grep ':'`" ]; then
			print_hhr
			echo ":: loop ${r}> ${@}"
			print_hr
		fi
		"${integrated}/ops/ti.sh" -h "${cmd_hosts}" -m "${cmd_mod_names}" \
			-i "${cmd_indexes}" -k "${ti_args}" "${ti_file}" "${@}"
		sleep 0.1
	done
}

cmd_ti_loop "${@}"
